<h1>Listing servers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Server category</th>
    <th>Siad</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Obs</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @servers.each do |server| %>
  <tr>
    <td><%= server.name %></td>
    <td><%= server.server_category_id %></td>
    <td><%= server.siad %></td>
    <td><%= server.phone %></td>
    <td><%= server.email %></td>
    <td><%= server.obs %></td>
    <td><%= link_to 'Show', server %></td>
    <td><%= link_to 'Edit', edit_server_path(server) %></td>
    <td><%= link_to 'Destroy', server, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

